@model HotelReservationsManager.Data.Entities.Reservation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReservedRoomId" class="control-label"></label>
                <select asp-for="ReservedRoomId" class="form-control" asp-items="ViewBag.ReservedRoomId"></select>
                <span asp-validation-for="ReservedRoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Users</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateSet" class="control-label"></label>
                <input asp-for="DateSet" class="form-control" />
                <span asp-validation-for="DateSet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateSetOff" class="control-label"></label>
                <input asp-for="DateSetOff" class="form-control" />
                <span asp-validation-for="DateSetOff" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HaveBreakfast" /> @Html.DisplayNameFor(model => model.HaveBreakfast)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AllInclusive" /> @Html.DisplayNameFor(model => model.AllInclusive)
                </label>
            </div>
            
            <div>
                <label class="control-label">Clients</label>
                @Html.ListBox("Clients");
            </div>
            @*<div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
